---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Specialist suspension setup, Caterham engineering, and motorsport services. 30 years experience." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/images/TFTR_Icon.png" />
    <title>{title} | Too Fast To Race</title>
    
    <!-- Google Fonts - Racing-inspired typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow:wght@400;500;600;700&family=Barlow+Condensed:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header">
      <nav class="nav-container">
        <a href="/" class="logo">
          <img src="/images/TFTR_Icon.png" alt="Too Fast To Race" class="logo-img" />
        </a>
        <button class="mobile-menu-btn" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/caterham">Caterham</a></li>
          <li><a href="/products">Products</a></li>
          <li><a href="/partners">Partners</a></li>
          <li><a href="/contact" class="nav-cta">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-content">
        <div class="footer-brand">
          <img src="/images/TFTR_Icon.png" alt="TFTR" class="footer-logo" />
          <p class="footer-tagline">Too Fast To Race</p>
          <p class="footer-company">S Rogers Engineering Ltd</p>
        </div>
        <div class="footer-contact">
          <h4>Location</h4>
          <address>
            Y Gwernen<br />
            Dryslwyn<br />
            Carmarthen<br />
            SA32 8SA
            email simon@toofasttorace.com
            Call  07920 843146
          </address>
        </div>
        <div class="footer-links">
          <h4>Services</h4>
          <ul>
            <li><a href="/services#suspension">Suspension Setup</a></li>
            <li><a href="/services#valving">Custom Valving</a></li>
            <li><a href="/services#chassis">Chassis Engineering</a></li>
            <li><a href="/caterham">Caterham Builds</a></li>
          </ul>
        </div>
        <div class="footer-partners">
          <h4>Partners</h4>
          <ul>
            <li>Penske Racing Shocks</li>
            <li>Nitron Racing Systems</li>
            <li>Hyperco Springs</li>
            <li>Eibach</li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} S Rogers Engineering Ltd. All rights reserved.</p>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuBtn = document.querySelector('.mobile-menu-btn');
      const navLinks = document.querySelector('.nav-links');
      
      menuBtn?.addEventListener('click', () => {
        navLinks?.classList.toggle('active');
        menuBtn.classList.toggle('active');
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    /* Brand Colors */
    --tftr-green: #5CB85C;
    --tftr-green-dark: #4a9a4a;
    --tftr-green-light: #7dcc7d;
    --tftr-black: #0a0a0a;
    --tftr-dark: #111111;
    --tftr-darker: #1a1a1a;
    --tftr-white: #ffffff;
    --tftr-grey: #888888;
    --tftr-grey-light: #cccccc;
    
    /* Typography */
    --font-display: 'Bebas Neue', sans-serif;
    --font-heading: 'Barlow Condensed', sans-serif;
    --font-body: 'Barlow', sans-serif;
    
    /* Spacing */
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 2rem;
    --space-lg: 4rem;
    --space-xl: 6rem;
    
    /* Container */
    --container-max: 1400px;
    --container-padding: 1.5rem;
  }

  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.6;
    color: var(--tftr-white);
    background-color: var(--tftr-black);
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 600;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 6rem);
    letter-spacing: 0.05em;
  }

  h2 {
    font-size: clamp(2rem, 5vw, 3.5rem);
  }

  h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
  }

  p {
    max-width: 65ch;
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--tftr-green);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  ul {
    list-style: none;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--tftr-green);
    color: var(--tftr-black);
  }

  .btn-primary:hover {
    background: var(--tftr-green-light);
    color: var(--tftr-black);
    transform: translateY(-2px);
  }

  .btn-outline {
    background: transparent;
    color: var(--tftr-white);
    border: 2px solid var(--tftr-green);
  }

  .btn-outline:hover {
    background: var(--tftr-green);
    color: var(--tftr-black);
  }

  /* Green accent text */
  .text-green {
    color: var(--tftr-green);
  }

  /* Section spacing */
  section {
    padding: var(--space-xl) 0;
  }

  /* Racing stripe decoration */
  .stripe-accent {
    display: inline-block;
    width: 60px;
    height: 4px;
    background: var(--tftr-green);
    margin-bottom: var(--space-sm);
  }
</style>

<style>
  /* Header */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(92, 184, 92, 0.2);
  }

  .nav-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0.75rem var(--container-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-img {
    height: 40px;
    width: auto;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links a {
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.5rem 0;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--tftr-green);
    transition: width 0.3s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .nav-cta {
    background: var(--tftr-green);
    color: var(--tftr-black) !important;
    padding: 0.75rem 1.5rem !important;
    font-weight: 600;
  }

  .nav-cta:hover {
    background: var(--tftr-green-light);
  }

  .nav-cta::after {
    display: none;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
  }

  .mobile-menu-btn span {
    display: block;
    width: 25px;
    height: 2px;
    background: var(--tftr-white);
    transition: all 0.3s ease;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Footer */
  .site-footer {
    background: var(--tftr-darker);
    border-top: 1px solid rgba(92, 184, 92, 0.2);
    padding: var(--space-lg) 0 var(--space-md);
  }

  .footer-content {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .footer-logo {
    width: 60px;
    height: auto;
    margin-bottom: var(--space-xs);
  }

  .footer-tagline {
    font-family: var(--font-display);
    font-size: 1.5rem;
    letter-spacing: 0.1em;
  }

  .footer-company {
    color: var(--tftr-grey);
    font-size: 0.9rem;
  }

  .footer-content h4 {
    font-family: var(--font-heading);
    font-size: 1rem;
    color: var(--tftr-green);
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .footer-contact address {
    font-style: normal;
    color: var(--tftr-grey-light);
    line-height: 1.8;
  }

  .footer-links ul,
  .footer-partners ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links a,
  .footer-partners li {
    color: var(--tftr-grey-light);
    font-size: 0.95rem;
  }

  .footer-links a:hover {
    color: var(--tftr-green);
  }

  .footer-bottom {
    max-width: var(--container-max);
    margin: var(--space-lg) auto 0;
    padding: var(--space-md) var(--container-padding) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: var(--tftr-grey);
    font-size: 0.85rem;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .mobile-menu-btn {
      display: flex;
    }

    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      background: var(--tftr-black);
      flex-direction: column;
      justify-content: center;
      gap: 2rem;
      transition: right 0.3s ease;
    }

    .nav-links.active {
      right: 0;
    }

    .nav-links a {
      font-size: 1.5rem;
    }
  }
</style>
